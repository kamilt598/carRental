<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Kamil" id="add columns">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cars"/>
                <tableExists tableName="clients"/>
                <tableExists tableName="places"/>
                <tableExists tableName="rentals"/>
            </not>
        </preConditions>
        <createTable tableName="cars">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="cars_pkey"/>
            </column>
            <column name="brand" type="VARCHAR(255)"/>
            <column name="color" type="VARCHAR(255)"/>
            <column name="engine" type="VARCHAR(255)"/>
            <column name="is_rented" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="VARCHAR(255)"/>
            <column name="model" type="VARCHAR(255)"/>
            <column name="picture" type="VARCHAR(255)"/>
            <column name="price" type="NUMERIC"/>
            <column name="price_usd" type="NUMERIC"/>
            <column name="price_eur" type="NUMERIC"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="production_year" type="VARCHAR(4)"/>
        </createTable>
        <createTable tableName="clients">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="clients_pkey"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="nick" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="roles" type="VARCHAR(255)" defaultValue="ROLE_ADMIN"/>
        </createTable>
        <createTable tableName="places">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="places_pkey"/>
            </column>
            <column name="city" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="rentals">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="rentals_pkey"/>
            </column>
            <column name="drop_off_city" type="VARCHAR(255)"/>
            <column name="end_date" type="VARCHAR(255)"/>
            <column name="pick_up_city" type="VARCHAR(255)"/>
            <column name="pick_up_time" type="VARCHAR(255)"/>
            <column name="start_date" type="VARCHAR(255)"/>
        </createTable>
        <insert tableName="cars">
            <column name="id" value="1"/>
            <column name="brand" value="Mercedes"/>
            <column name="model" value="SL500"/>
            <column name="type" value="Roadster"/>
            <column name="production_year" value="2012"/>
            <column name="engine" value="5.0"/>
            <column name="color" value="Red"/>
            <column name="is_rented" value="false"/>
            <column name="picture" value="car-1.jpg"/>
            <column name="price" value="300"/>
            <column name="location" value="Rzeszow"/>
        </insert>
        <insert tableName="clients">
            <column name="id" value="1"/>
            <column name="first_name" value="Kamil"/>
        </insert>
        <insert tableName="places">
            <column name="id" value="1"/>
            <column name="city" value="Rzeszow"/>
        </insert>
    </changeSet>
</databaseChangeLog>
